<UserControl x:Class="BookItAdmin.UserControls.TreatmentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookItAdmin.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <ListView x:Name="listView" Height="455" Width="800" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Canvas.Top="-10" VerticalAlignment="Top">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5,5,5,10">
                        <Label Width="450" Content="{Binding TreatmentName}"></Label>
                        <Button Margin="0,5,5,0" Width="32" Height="32" Name="btnDetails" Content="..." Tag="{Binding Id}" Click="btnDetails_Click"></Button>
                        <Button Margin="5,5,5,0" Width="32" Height="32" Name="btnUpdate" Content="update"></Button>
                        <Button Margin="5,5,5,0" Width="32" Height="32" Name="btnDelete" Content="delete"></Button>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="new treatment" HorizontalAlignment="Left" Canvas.Left="240" Canvas.Top="378" VerticalAlignment="Top" RenderTransformOrigin="2.722,-0.029" Height="38" Width="140"/>
    </Canvas>
</UserControl>
