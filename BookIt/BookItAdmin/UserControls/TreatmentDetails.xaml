<Window x:Class="BookItAdmin.UserControls.TreatmentDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookItAdmin.UserControls"
        mc:Ignorable="d"
        Title="TreatmentDetails" Height="200" Width="200" ResizeMode="NoResize">
    <Canvas>
        <Label x:Name="tName" Content="{Binding TreatmantName}"></Label>
        <Label x:Name="tCost" Content="{Binding CostRange}"></Label>
        <Label x:Name="tTime" Content="{Binding TimeRange}" HorizontalAlignment="Center" Canvas.Top="15" VerticalAlignment="Top"></Label>
        <Label x:Name="tDescription" Content="{Binding Explanation}"></Label>
        <Button x:Name="btnClose" Content="close" Canvas.Left="78" Canvas.Top="133" HorizontalAlignment="Center" VerticalAlignment="Top" Height="24" Width="44" RenderTransformOrigin="0.341,-0.165" Click="btnClose_Click"/>
    </Canvas>
</Window>
