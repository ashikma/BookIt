
@{
    ViewData["Title"] = "ViewLoginForm";
    // Layout = "~/Views/Shared/View.cshtml";
}
<link href="~/CONTENT/Styles/login.css" rel="stylesheet" />
<form class="userForm" method="post" action="http://localhost:5092/User/Login">
    <h1 class="title">Sign in</h1>
    <div class="input-group">
        <label for="username">User Name</label>
        <div class="input-wrapper">
            <span class="icon">&#128100;</span> <!-- user icon -->
            <input type="text" name="username" placeholder="User Name" required>
        </div>
    </div>
    <div class="input-group">
        <label for="password">Password</label>
        <div class="input-wrapper">
            <span class="icon">&#128274;</span> <!-- Lock icon -->
            <input type="password" name="password" placeholder="Password" required>
            <span class="show-password">&#128065;</span> <!-- Eye icon -->
        </div>
    </div>
    @if (ViewBag.error != null)
    {
        <h1 class="error">@ViewBag.error.ToString()</h1>
    }
    <button type="submit" class="btn">Log in</button>
    <div class="divider">
        <span>Or</span>
    </div>
    <p class="signup-text">
        Don't have an account? <a href="http://localhost:5092/User/ViewSignupForm">Sign up here</a>
    </p>
</form>


