<Window x:Class="BookItAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BookIt" Height="900" Width="1200" Background="#fafafa">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Side Menu -->
        <StackPanel Grid.Column="0" Background="#e0bfb8" VerticalAlignment="Stretch">
            <Button x:Name="btLogin" Height="40" Margin="20,30" Click="btLogin_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Name="lblogin" Content="Login" FontWeight="Bold" FontSize="14"/>
                    <Image x:Name="imglogin" Source="/Images/login.png" Width="18" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <StackPanel x:Name="stButtons" Margin="20,20,20,0">
                <Button Content="Treatments" Height="35" Margin="0,0,0,10" Click="treatments_Click"/>
                <Button Content="Appointments" Height="35" Margin="0,0,0,10"/>
                <Button Content="Settings" Height="35" Margin="0,0,0,10"/>
            </StackPanel>
        </StackPanel>

        <!-- Content Area -->
        <Border x:Name="brContent" Grid.Column="1" Background="White" />
        
    </Grid>
</Window>
